{
  "configurations": [
    {
      "type": "java",
      "name": "Launch Analysis Consumer",
      "request": "launch",
      "mainClass": "ch.ethz.infk.dspa.App",
      "projectName": "social-network-analysis",
      "args": [
        "-consumertype",
        "activeposts",
        "-kafkaserver",
        "localhost:29092"
      ]
    },
    {
      "type": "java",
      "name": "Launch Post Producer",
      "request": "launch",
      "mainClass": "ch.ethz.infk.dspa.producer.App",
      "projectName": "stream-producer",
      "args": [
        "-file",
        "./data/1k-users-sorted/streams/post_event_stream.csv",
        "-schema",
        "./data/schema/avro/post.avsc",
        "-topic",
        "post",
        "-kafkaserver",
        "localhost:29092",
        "-speedup",
        "60",
        "-rdelay",
        "5",
        "-sdelay",
        "600",
        "-seed",
        "1",
        "-worker",
        "2"
      ]
    },
    {
      "type": "java",
      "name": "Launch Like Producer",
      "request": "launch",
      "mainClass": "ch.ethz.infk.dspa.producer.App",
      "projectName": "stream-producer",
      "args": [
        "-file",
        "./data/1k-users-sorted/streams/likes_event_stream.csv",
        "-schema",
        "./data/schema/avro/like.avsc",
        "-topic",
        "like",
        "-kafkaserver",
        "localhost:29092",
        "-speedup",
        "60",
        "-rdelay",
        "5",
        "-sdelay",
        "600",
        "-seed",
        "2",
        "-worker",
        "2"
      ]
    },
    {
      "type": "java",
      "name": "Launch Comment Producer",
      "request": "launch",
      "mainClass": "ch.ethz.infk.dspa.producer.App",
      "projectName": "stream-producer",
      "args": [
        "-file",
        "./data/1k-users-sorted/streams/comment_event_stream.csv",
        "-schema",
        "./data/schema/avro/comment.avsc",
        "-topic",
        "comment",
        "-kafkaserver",
        "localhost:29092",
        "-speedup",
        "60",
        "-rdelay",
        "5",
        "-sdelay",
        "600",
        "-seed",
        "3",
        "-worker",
        "2"
      ]
    }
  ]
}
